<div tal:attributes="id string:uid_${context/UID}" class="FAQWrapper BlockOverallWrapper">
  <div class="faqtitle">
    <span class="itemTitle">
      <img tal:attributes="src string:${view/portal_url}/++resource++ftw.contentpage.resources/arrow_right.png"
           class="toggleImage"
           alt="" width="16px" />
      <tal:title tal:content="context/title">Title</tal:title>
    </span>
  </div>
  <div class="faqcontent simplelayout-block-wrapper" style="display:none;">
        <div class="sl-img-wrapper" tal:condition="view/has_image"
             tal:attributes="style view/image_wrapper_style"
             tal:define="image_desc context/getImageCaption | context/Description">
                    <a  tal:attributes="
                                        title image_desc;
                                        href string:${context/absolute_url}/image
                                        "
                                        tal:omit-tag="not: here/getImageClickable|nothing"
                    >
                        <img tal:replace="structure view/get_image_tag" />
                    </a>
                    <p tal:condition="image_desc"
                       tal:content="context/getImageCaption">Caption</p>
        </div>
         <div tal:condition="context/getText" class="sl-text-wrapper" tal:content="structure context/getText"></div>
    </div>
</div>
<div class="visualClear"><!-- --></div>
