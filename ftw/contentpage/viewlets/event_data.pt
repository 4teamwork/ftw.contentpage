<div i18n:domain="ftw.contentpage">
<metal:content-description fill-slot="content-description">
  <metal:content-description define-macro="content-description">
    <!— no description —>
  </metal:content-description>
</metal:content-description>
    <table class="vertical plain">
      <tr tal:condition="view/has_img">
        <th tal:condition="context/start">
          &nbsp;
        </th>
        <td>
          <a tal:condition="view/has_img"
             tal:attributes="href view/get_large_img_link"
             class="colorboxLink">
            <tal:img tal:content="structure python:view.get_img()" />
        </a>

        </td>
      </tr>

      <tr tal:condition="context/start">
        <th i18n:translate="">
          Date
        </th>
        <td tal:content="context/getDate" />
      </tr>
      <tr tal:condition="context/location">
        <th i18n:translate="">
          Location
        </th>
        <td tal:content="context/location" />
      </tr>
      <tr tal:condition="context/Description">
        <th i18n:translate="">Description</th>
        <td tal:content="context/Description" />
      </tr>
    </table>
</div>
