    url_expr="string:${here/absolute_url}/block_control"
    visible="True">
  <permission value="ftw.contentpage: Edit teaser image on EventPage"/>
 </action>
 <action title="Squarish-Right" action_id="sl-small-right" category="sl-layouts"
