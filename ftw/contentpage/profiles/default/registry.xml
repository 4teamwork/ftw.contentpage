<?xml version="1.0"?>
<registry>
    <record name="ftw.contentpage.addressblock.defaultcountry">
        <field type="plone.registry.field.TextLine">
            <title>Default country used in addressblocks.</title>
            <required>False</required>
        </field>
        <value>Switzerland</value>
    </record>
    <record name="ftw.contentpage.listingblock.defaulttitle">
        <field type="plone.registry.field.TextLine">
            <title>Default title of a listingblock</title>
            <required>False</required>
        </field>
        <value></value>
    </record>
    <record name="ftw.contentpage.listingblock.defaulttablecolumns">
        <field type="plone.registry.field.Tuple">
            <title>Default table columns</title>
            <required>True</required>
			<value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
	        <element>getContentType</element>
	        <element>Title</element>
	        <element>modified</element>
		</value>
    </record>
    <record name="ftw.contentpage.addressblock.defaulttitle">
        <field type="plone.registry.field.TextLine">
            <title>Default title of a listingblock</title>
            <required>False</required>
        </field>
        <value>Address</value>
    </record>

    <record name="ftw.contentpage.subjectlisting.portal_types">
        <field type="plone.registry.field.List">
            <title>portal_types to list in alphabetical subject listing</title>
            <required>False</required>
            <value_type type="plone.registry.field.TextLine" />
        </field>
        <value>
            <element>ContentPage</element>
        </value>
    </record>
    <record name="ftw.contentpage.subjectlisting.show_mimetype_icon">
        <field type="plone.registry.field.Bool">
            <title>Show the mimetype icon after the listed subject.</title>
            <value_type type="plone.registry.field.Bool" />
        </field>
        <value>False</value>
    </record>
    <record name="ftw.contentpage.listingblock.defaultfileviewname">
        <field type="plone.registry.field.TextLine">
            <title>Default file view name</title>
            <required>False</required>
        </field>
        <value>download</value>
    </record>
</registry>
